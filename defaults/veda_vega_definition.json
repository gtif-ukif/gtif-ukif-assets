{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "values": []
  },
  "transform": [
    {"calculate": "datum.asset_b1.mean", "as": "mean"},
    {"calculate": "datum.asset_b1.min", "as": "min"},
    {"calculate": "datum.asset_b1.max", "as": "max"},
    {"calculate": "datum.asset_b1.std", "as": "stDev"},
    {"window": [{"op": "row_number", "as": "index"}], "frame": [null, null]}
  ],
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "binnedutcyearmonthdate",
      "type": "temporal",
      "axis": {
        "format": "%Y-%m-%d"
      },
      "title": "Measurement"
    }
  },
  "layer": [
    {
      "mark": {"type": "area"},
      "encoding": {
        "y": {"field": "mean", "type": "quantitative"},
        "y2": {"field": "max", "type": "quantitative"},
        "fill": {"value": "#E1BE6A"},
        "opacity": {"value": 0.7}
      }
    },
    {
      "transform": [{ "filter": { "param": "hover", "empty": false } }],
      "mark": { "type": "point", "size": 100 },
      "encoding": {
        "y": {
          "field": "mean",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": ""
        },
        "color": {"value": "black"}
      }
    },

    {
      "mark": { "type": "point", "size": 30 },
      "encoding": {
        "y": {
          "field": "mean",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": ""
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {"type": "line", "filled": false},
      "encoding": {
        "y": {
          "field": "mean",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Value"
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {"type": "area"},
      "encoding": {
        "y": {"field": "min", "type": "quantitative"},
        "y2": {"field": "mean", "type": "quantitative"},
        "fill": {"value": "#40B0A6"},
        "opacity": {"value": 0.5}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Date"},
          {
            "field": "mean",
            "type": "quantitative",
            "format": ".2f",
            "title": "mean"
          },
          {
            "field": "min",
            "type": "quantitative",
            "format": ".2f",
            "title": "minimum"
          },
          {
            "field": "max",
            "type": "quantitative",
            "format": ".2f",
            "title": "maximum"
          },
          {
            "field": "stDev",
            "type": "quantitative",
            "format": ".2f",
            "title": "std dev"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["mean"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        {"name": "grid", "select": "interval", "bind": "scales"}
      ]
    }
  ],
  "background": "transparent"
}
